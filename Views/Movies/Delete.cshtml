@model MyMovieLibrary.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this movie?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Director</dt>
        <dd class="col-sm-10">@Model.Director</dd>
        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>
    </dl>

    @* Формата изпраща POST заявка за потвърждение на изтриването *@
    <form asp-action="DeleteConfirmed" method="post">
        @* Скрито поле, което носи ID-то на филма, който ще трием *@
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
